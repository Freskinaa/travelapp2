<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:orientation="vertical">

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="         Batllava"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textStyle="italic"/>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Batllava Lake refers to both an artificial lake and resort located in Kosovo.
Batllava Lake is located in north-eastern Kosovo in the municipality of Podujeva. It is 13 km  away from Podujeva and around 30 km from Pristina."
        android:textSize="18dp"
        android:textStyle="italic"
        android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/arrow1"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onImageView1Click"
        android:contentDescription="Image of user"/>
</LinearLayout>