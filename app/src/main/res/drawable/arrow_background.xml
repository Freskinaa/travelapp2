<!-- res/drawable/arrow_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Change the color as needed -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Button default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Change the color as needed -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
